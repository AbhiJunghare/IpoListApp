@model IEnumerable<IpoList.Models.IpoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().StockName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ListingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ListingDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>@item.StockName</td>
            <td>@item.ListingPrice</td>
            <td>@item.ListingDate.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
