@model IpoList.Models.IpoModel

@{
    ViewData["Title"] = "Delete IPO";
}

<h1>Delete IPO</h1>

<h4>Are you sure you want to delete this IPO?</h4>
<div>
    <h4>@Model.StockName</h4>
    <div>
        <label>Listing Price:</label> @Model.ListingPrice<br />
        <label>Listing Date:</label> @Model.ListingDate.ToShortDateString()
    </div>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
